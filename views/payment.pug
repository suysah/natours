doctype html
html
  head
    title Payment Gateway
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    link(href='https://fonts.googleapis.com/css?family=Lato:300,300i,700' rel='stylesheet')
    link(rel='stylesheet' href='/css/style.css')
    link(rel='shortcut icon' type='image/png' href='/img/favicon.png')
    style.
      .payment-container {
        display: flex;
        flex-direction: column;
        justify-content: space-evenly;
        display
        width: 80%;
        margin: 0 auto;
        text-align: center;
        height: 80vh;

      }
      .content {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
      }
      .tour-details, .payment-form {
        width: 38%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        border-radius: 8px;
        background-color: #f9f9f9;
      }
      .payment-form {
        display: flex;
        flex-direction: column;
        gap: 40px;
        padding: 20px;
        border-radius: 8px;
        background-color: #f9f9f9;
      }
      img {
        max-width: 80%;
        border-radius: 8px;
      }
      p{
        font-size:18px;
        font-style :bold;
        color:black;
      }
      form {
        display: flex;
        flex-direction: column;
      }
      .form-group {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
      }
      .form-group label {
        width: 150px;
        margin-right: 10px;
        text-align: left;
      }
      .cvv-group {
        display: flex;
        align-items: center;
        gap: 10px;
      }
      input {
        padding: 10px;
        font-size: 1em;
        border: 1px solid #ccc;
        border-radius: 5px;
        flex: 1;
      }
      button {
        margin-top: 30px;
        padding: 10px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        cursor: pointer;
      }
      button:hover {
        background-color: #0056b3;
      }
  body
    .payment-container
      h1 Payment Gateway

      .content
        .tour-details
          h2 Tour Information
          img(src=`/img/tours/${tour.imageCover}` alt="Tour Image")
          p= `Name: ${tour.name}`
          p= `Price: ${tour.price} $`

        .payment-form
          h2 Enter Payment Details
          form.form.form--payment
            .form-group
              label(for='card-number') Credit Card Number
              input(type="text" id="card-number" name="card-number" placeholder="1234 5678 9012 3456" maxlength="12" required)

            .form-group.cvv-group
              label(for='cvv') CVV
              input(type="text" id="cvv" name="cvv" placeholder="123" maxlength="3" minlength="3" required)

            button(type="submit" id="booking-payment" data-tour-id=`${tour.id}`) Book now

    script(src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.8/axios.min.js" integrity="sha512-v8+bPcpk4Sj7CKB11+gK/FnsbgQ15jTwZamnBf/xDmiQDcgOIYufBo6Acu1y30vrk8gg5su4x0CG3zfPaq5Fcg==" crossorigin="anonymous" referrerpolicy="no-referrer")      
    script(src='/js/booking.js')
